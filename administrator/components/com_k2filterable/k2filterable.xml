  <menu>COM_K2FILTERABLE</menu>
  <files>
    <filename>index.html</filename>
    <filename>k2filterable.php</filename>
    <filename>controller.php</filename>
    <folder>controllers</folder>
    <folder>views</folder>
    <folder>helpers</folder>
    <folder>models</folder>
    <folder>language</folder>
    <filename>gpl-3.0.txt</filename>
  </files>
  <languages folder="language">
    <language tag="en-GB">en-GB/en-GB.com_k2filterable.ini</language>
  </languages>
  <media destination="com_k2filterable" folder="media">  
    <folder>css</folder>  
    <folder>images</folder>  
    <folder>js</folder>  
    <file>index.html</file>  
  </media>
  <install>
    <sql>
      <file charset="utf8" driver="mysql">sql/install.sql</file>
    </sql>
  </install>
  <uninstall>
    <sql>
      <file charset="utf8" driver="mysql">sql/uninstall.sql</file>
    </sql>
  </uninstall>
  <update>
    <schemas>
      <schemapath type="mysql">sql/updates</schemapath>
    </schemas>
  </update>
  <administration>
    <menu view="cpanel" img="../media/com_k2filterable/images/icon-16-k2filterable.png">COM_K2FILTERABLE</menu>
