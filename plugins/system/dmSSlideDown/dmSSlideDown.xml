<?xml version="1.0" encoding="utf-8"?>
<extension 
	type="plugin"
	version="1.6.0"
	group="system"
	method="upgrade">
	<name>System - DM Spoiler Slide Down</name>
	<author>DM Digital</author>
	<creationDate>July 2011</creationDate>
	<copyright>Copyright 2011 DM Digital. All rights reserved.</copyright>
	<license>GNU/GPL</license>
	<authorUrl>www.dmdigital.it</authorUrl>
	<version>2.1.2</version>
	<description><![CDATA[PLG_DMSSLIDEDOWN_DESC]]></description>
	
	<files>
		<filename plugin="dmSSlideDown">dmSSlideDown.php</filename>
		<filename>index.html</filename>
		<folder>dmSSlideDown</folder>
	</files>
 
	<languages>
		<language tag="en-GB">en-GB.plg_system_dmSSlideDown.ini</language>
	</languages>
	
	<config>
		<fields name="params">
			<fieldset name="basic">	
			
				<field name="dmSSlideDown_listview" type="list" default="1" 
					label="DMSSLIDEDOWN_LISTVIEW_LABEL" 
					description="DMSSLIDEDOWN_LISTVIEW_DESC" >
					<option value="22">Display Button</option>
					<option value="-99">Display Hidden Text</option>
					<option value="99">Hide Spoiler and Button</option>
				</field>
				
				<field name="dmSSlideDown_button" type="text" default="Spoiler" filter="raw"
					label="DMSSLIDEDOWN_BUTTON_LABEL" 
					description="DMSSLIDEDOWN_BUTTON_DESC" 
				/>
		
				<field name="dmSSlideDown_nojquery" type="radio" default="1" 
					label="DMSSLIDEDOWN_PNOJQUERY_LABEL" 
					description="DMSSLIDEDOWN_PNOJQUERY_DESC" >
					<option value="1">No</option>
					<option value="0">Yes</option>
				</field>
				
			</fieldset>
		</fields>
	</config>
</extension>
